<h1>BookStore</h1>

<p>
<% if @current_user %>
  Welcome, <%= @current_user.name %>! <%= link_to 'Log out', logout_path %>
<% end %>
| <%= link_to "My cart", cart_path %>
</p>

<div class="products">
  <% @products.each do |p| %>
    <div class="product">
      <h3><%= p.name %></h3>
      <p class="price">
        <%= number_to_currency p.price %>
      </p>
      <%= link_to "Add to cart", add_cart_path(product_id: p) %>
    </div>
  <% end %>
</div>
